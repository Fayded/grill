  <section class="container mt-8 pb-10 px-4 sm:pl-0">
    { menu.map((course) => (
      <h3 class="text-2xl text-[#EDE1CD] grid-cols-24 uppercase mt-6 mb-2">{course.course} {course.price && <span>{course.price}</span>}</h3>
      <ul class="grid grid-cols-24">
        {course.items?.map((menuItem) => ( 
          <li class="col-span-24 sm:col-span-8 pr-5 mt-2">
            <p class={menuItem.description ? "text-[#F0DBBA]" : "text-base text-primary"}>
              {menuItem.name} {menuItem.price ? menuItem.price : null }
            </p>
            <p>
              {menuItem.description && <span>{menuItem.description}</span>}
            </p>
          </li>
        ))}
      </ul>
      )
    )}  
  </section>
</Layout>
