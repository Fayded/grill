    </div>
  </section>
  <section class="container mt-8 pb-10 grid">
    { menu.map((course) => (
      <div class="md:w-[91%] md:mx-auto">
        <section class="grid grid-cols-24 text-center">
          <h3 class="text-2xl text-[#EDE1CD] grid-cols-24 uppercase mb-2 col-span-22 col-start-2">{course.course} {course.price && <span>{course.price}</span>}</h3>
          {course.description && <p class="text-lg font-base uppercase text-primary col-span-22 col-start-2 mb-2">{course.description}</p>}
        </section>
        <ul class="grid grid-cols-24 mb-10">
          {course.items?.map((menuItem) => ( 
            menuItem.size && (
              <li class="col-span-22 col-start-2 md:col-span-8 md:nth-child(3):col-start-2 pr-5 mt-6">
                <p class={menuItem.description ? "text-[#F0DBBA] uppercase" : "text-5xl uppercase"}>
                  {menuItem.name} {menuItem.price ? menuItem.price : null }
                </p>
            </li>
            ) || (
            !menuItem.size && (
              <li class="col-span-22 col-start-2 md:col-span-8 md:nth-child(3):col-start-2 pr-5 mt-6">
              <p class={menuItem.description ? "text-[#F0DBBA] uppercase" : "font-base uppercase text-primary"}>
                {menuItem.name} {menuItem.price ? menuItem.price : null }
              </p>
              <p class="uppercase">
                {menuItem.description && <span>{menuItem.description}</span>}
              </p>
            </li>
          )
        )))}

        {course.additionalItems?.map((additionalItem) => (
            <li class="col-span-24 pr-5 my-12 text-center">
              <p class="text-[#F0DBBA] uppercase">{additionalItem.name} {additionalItem.price ? additionalItem.price : null }</p>
            </li>
          ))}
        </ul>
      </div>
      )
    )}  
  </section>
</Layout>
