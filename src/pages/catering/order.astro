---
import "../styles/global.css";
import Layout from '../../layouts/Layout.astro';
---

<Layout class="w-full">
  <main>
    <section class="container grid grid-cols-24 pt-10 pb-4">
      <div class="col-span-8 text-4xl uppercase items-center justify-start">
        <h3>Catering</h3>
      </div>
      <div class="sm:col-span-8 sm:col-start-16 flex flex-col sm:flex-row items-center justify-end gap-4">
        <a href="#" class="catering-link col-span-12 sm:col-span-6 text-nowrap font-normal uppercase px-[28px] py-[16px] leading-none hover:bg-primary hover:text-[#273E5B] flex items-center">Menu 
          <svg class="ml-4"width="10" height="18" viewBox="0 0 10 18" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M0.794922 17.5H0.793945V17.499L8.43945 9.85352L0.794922 17.5ZM0.794922 0.500977L9.29297 9L8.4541 9.83789L8.46094 9.83105C8.58831 9.68679 8.73558 9.44496 8.78027 9.14941C8.82287 8.86761 8.76835 8.54897 8.5459 8.26562L8.43945 8.14648L0.793945 0.500977H0.794922Z" />
          </svg>
        </a>
        <a href="#" class="catering-link col-span-12 sm:col-span-6 text-nowrap font-normal uppercase px-[28px] py-[16px] leading-none hover:bg-primary hover:text-[#273E5B] flex items-center">Order Now
          <svg class="ml-4"width="10" height="18" viewBox="0 0 10 18" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M0.794922 17.5H0.793945V17.499L8.43945 9.85352L0.794922 17.5ZM0.794922 0.500977L9.29297 9L8.4541 9.83789L8.46094 9.83105C8.58831 9.68679 8.73558 9.44496 8.78027 9.14941C8.82287 8.86761 8.76835 8.54897 8.5459 8.26562L8.43945 8.14648L0.793945 0.500977H0.794922Z" />
          </svg>
        </a>
      </div>
    </section>
    <form class="container mt-8 pb-10 grid grid-cols-24" action="/submit-catering" method="POST">
      <div class="col-span-24 sm:col-span-10 mt-4">
        <label class="text-base uppercase" for="name">Name:</label>
        <input type="text" id="name" name="name" required class="w-full p-4 mt-2 outline-none text-primary-blue bg-primary font-medium uppercase" />
      </div>
      <div class="col-span-24 sm:col-span-10 sm:col-start-14 mt-4">
        <label class="text-base uppercase" for="street">Street Address:</label>
        <input type="text" id="street" name="street" required class="w-full p-4 mt-2 outline-none text-primary-blue bg-primary font-medium uppercase" />
      </div>
      <div class="col-span-24 sm:col-span-10 mt-4">
        <label class="text-base uppercase" for="email">Email:</label>
        <input type="email" id="email" name="email" required class="w-full p-4 mt-2 outline-none text-primary-blue bg-primary font-medium uppercase" />
      </div>
      <div class="col-span-24 sm:col-span-6 sm:col-start-14 mt-4">
        <label class="text-base uppercase" for="city">City:</label>
        <input type="text" id="city" name="city" required class="w-full p-4 mt-2 outline-none text-primary-blue bg-primary font-medium uppercase" />
      </div>
      <div class="col-span-24 sm:col-span-3 sm:col-start-21 mt-4">
        <label class="text-base uppercase" for="zip">Zip:</label>
        <input type="text" id="zip" name="zip" required class="w-full p-4 mt-2 outline-none text-primary-blue bg-primary font-medium uppercase" />
      </div>
      <div class="col-span-24 sm:col-span-6  mt-4">
        <label class="text-base uppercase text-primary" for="date">Event Date:</label>
        <input type="date" id="date" name="date" class="w-full p-4 mt-2 outline-none text-primary-blue bg-primary font-medium uppercase" />
      </div>
      <div class="col-span-24 sm:col-span-3 sm:col-start-8 mt-4">
        <label class="text-base uppercase" for="time">Event Time:</label>
        <input type="time" id="time" name="time" class="w-full p-4 mt-2 outline-none text-primary-blue bg-primary font-medium uppercase fill-red-500" />
      </div>
      <div class="col-span-24 sm:col-span-10 sm:col-start-14 mt-4">
        <label class="text-base uppercase" for="phone">Phone Number:</label>
        <input type="text" id="phone" name="phone" required minlength="6" class="w-full p-4  mt-2 outline-none text-primary-blue bg-primary font-medium uppercase" />
      </div>
      <div class="col-span-24 sm:col-span-10  mt-4">
        <label class="text-base uppercase" for="people">Number of People:</label>
        <input type="number" id="people" name="people" required class="w-full p-4  mt-2 outline-none text-primary-blue bg-primary font-medium uppercase" />
      </div>
      <div class="col-span-24 sm:col-span-10 sm:col-start-14 mt-4">
        <label class="text-base uppercase" for="service">Service Type:</label>
        <select id="service" name="service" class="w-full p-4  mt-2 outline-none text-primary-blue bg-primary font-medium uppercase">
          <option value="pickup">Pick it up</option>
          <option value="delivered">Have it Delivered (Delivery Fee)</option>
          <option value="catered">Have it catered by our staff (Service charge)</option>
        </select>
      </div>
      <button type="submit" class="catering-link sm:col-start-21 col-span-12 sm:col-span-3 cursor-pointer text-nowrap font-normal uppercase px-[28px] py-[16px] leading-none hover:bg-primary hover:text-[#273E5B] flex items-center mt-10">Submit
        <svg class="ml-4"width="10" height="18" viewBox="0 0 10 18" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M0.794922 17.5H0.793945V17.499L8.43945 9.85352L0.794922 17.5ZM0.794922 0.500977L9.29297 9L8.4541 9.83789L8.46094 9.83105C8.58831 9.68679 8.73558 9.44496 8.78027 9.14941C8.82287 8.86761 8.76835 8.54897 8.5459 8.26562L8.43945 8.14648L0.793945 0.500977H0.794922Z" />
        </svg>
      </button>
    </form>
  </main>
</Layout>