---
import logo from '../../assets/logo.svg'
import Nav from '../nav/index.astro';
import facebook from '../../assets/facebook.svg';
import x from '../../assets/x.svg';
import instagram from '../../assets/instagram.svg';
---

<header class="flex w-full justify-between items-center">
  <div class="flex flex-col border-r border-[#D9C4A2] p-10 items-center">
    <p class="mb-4 text-center">751 U.S. Highway 27 S, <br>
    Sebring, FL 33870</p>
    <span class="flex gap-4">
      <a href="#"><img src={x.src} alt="x" fetchpriority="high" /></a>
      <a href="#"><img src={facebook.src} alt="facebook" fetchpriority="high" /></a>
      <a href="#"><img src={instagram.src} alt="Instagram" fetchpriority="high" /></a>
    </span>
  </div>
  <a href="/">
    <img class="logo" src={logo.src} alt="The Grill at Lake Jackson" fetchpriority="high" />
  </a>  
  <div class="flex flex-col border-l items-center p-10">
    <p class="text-[#D9C4A2]"><b>TEL.</b> 863-314-0000</p>
    <a href="#" class="border-2 border-[#D9C4A2] rounded-full block uppercase px-[28px] py-[17px] leading-none" >Order Online</a>
  </div>
