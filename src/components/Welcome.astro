---
import logo from '../assets/logo.svg';
---

<div id="container">
	<main class="bg-[#273E5B]">
		<img class="logo" src={logo.src} alt="" fetchpriority="high" />
		<h2 class="text--primary text-2xl font-light">Coming soon...</h2>
	</main>
</div>

<style>
	#container {
		font-family: Inter, Roboto, 'Helvetica Neue', 'Arial Nova', 'Nimbus Sans', Arial, sans-serif;
		height: 100%;
	}

	main {
		height: 100%;
		display: flex;
		flex-direction: column;
		justify-content: center;
		align-items: center;
	}

	.logo {
		width: 60%;
	}
</style>
