---
import Email from '../email/index.astro';
import arrow from '../../assets/arrow.svg';
import Socials from '../socials/index.astro';
---

<div class="border-t border-primary"></div>
<footer class="container text-primary flex flex-col sm:grid sm:grid-cols-3 sm:divide-x-1 sm:divide-primary">
  <div class="flex flex-col items-center justify-center order-2 sm:order-1">
    <a href="#" class="bg-primary text-[#273E5B] p-3 px-5 leading-none font-bold uppercase flex text-lg tracking-wider mb-6">Work with us <img class="ml-2" src={arrow.src} alt="arrow" /></a>
    <p class="font-medium mb-2">PRESS INQUIRIES</p> 
    <a class="text-sm" href="mailto:#">HR@THEGRILLATLJ.COM</a> 
  </div>  
  <div class="flex flex-col items-center py-9 order-1 sm:order-2">
    <p class="text-primary flex items-end mb-4">
      <span class="text-sm leading-none font-normal">TEL.</span>&nbsp;&nbsp;
      <span class="font-medium text-lg leading-none">863 314 0000</span>
    </p>
    <p class="mb-4 text-center uppercase tracking-wider">751 U.S. Highway 27 S, <br>
    Sebring, FL 33870</p>
    <a class="hidden sm:block text-sm" href="mailto:#">HR@THEGRILLATLJ.COM</a>
  </div>  
  <div class="flex flex-col items-center justify-center order-3 my-10 sm:my-0">
    <h3 class="text-2xl uppercase mb-4">Say Hello!</h3>
    
    <span class="flex justify-between px-4 w-40 mb-5">
      <Socials />
      </a>
    </span>
    <Email />
  </div>
</footer>